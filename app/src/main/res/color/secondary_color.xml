<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when button is pressed -->
    <item android:state_pressed="true"
        android:color="@color/secondary_pressed" />

    <!-- State when button is focused -->
    <item android:state_focused="true"
        android:color="@color/secondary_focused" />

    <!-- State when button is disabled -->
    <item android:state_enabled="false"
        android:color="@color/secondary_disabled" />

    <!-- State when button is selected -->
    <item android:state_selected="true"
        android:color="@color/secondary_selected" />

    <!-- State when button is hovered -->
    <item android:state_hovered="true"
        android:color="@color/secondary_hover" />

    <!-- Default state -->
    <item android:color="@color/secondary" />

</selector>